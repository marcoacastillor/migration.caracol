BROKER SCHEMA co.com.caracol.services.perfilesxsistema

DECLARE ns1 NAMESPACE 'http://www.caracoltv.com.co/TI/seguridad/perfilesxsistema/';

CREATE COMPUTE MODULE PerfilesPorSistema_ResponseService
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		--Copiar cabeceras de respuesta
		SET OutputRoot.MQMD 	= Environment.usr._header.MQMD;
		SET OutputRoot.MQRFH2 	= Environment.usr._header.MQRFH2;
		
		--Declarar variable referencia de entrada
		DECLARE refInp REFERENCE TO InputRoot;
		MOVE refInp LASTCHILD;
		MOVE refInp LASTCHILD;
		MOVE refInp LASTCHILD;
		
		--Crear mensaje de salida
		CREATE FIELD OutputRoot.XMLNSC;
		DECLARE refOut REFERENCE TO OutputRoot.XMLNSC;
		
		IF EXISTS(refInp.*:PerfilesDeSistemaResult[]) THEN
			--Crear mensaje de salida
			CREATE FIELD refOut.ns1:PerfilesXSistemaResponse;
			DECLARE refOut REFERENCE TO refOut.ns1:PerfilesXSistemaResponse;
			
			DECLARE i INTEGER 1;
			--Validar en pruebas
			FOR refChild AS refInp.*:PerfilesDeSistemaResult.*:Hijas.*:Perfil[] DO
				SET refOut.ns1:Perfil[i].ns1:Id     	= FIELDVALUE(refInp.*:PerfilesDeSistemaResult.*:Id);
				SET refOut.ns1:Perfil[i].ns1:Nombre    	= FIELDVALUE(refInp.*:PerfilesDeSistemaResult.*:Nombre);
				SET refOut.ns1:Perfil[i]    			= FIELDVALUE(refChild);
				SET i = i + 1;
			END FOR;
		ELSE
			THROW USER EXCEPTION CATALOG 'CARACOL.EXCEPTION.CUSTOM' MESSAGE 27 VALUES('CUST::ERROR BACKEND');
		END IF;
		RETURN TRUE;
	END;
END MODULE;
	